<form action="/figures/<%=@figure.id%>" method="POST">
   <input id="hidden" type="hidden" name="_method" value="patch">
   Figure Name:<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

   <h4>Titles</h4>
   <br>
   <%Title.all.each do |title|%>
   <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title.name)%>><%=title.name%></input>
   <%end%>
    <h4>Landmarks</h4>
   <br>
   <%Landmark.all.each do |landmark|%>
   <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.id%>" value="<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark.name)%>><%=landmark.name%></input>
   <%end%>
   <h4>Associate to a New Title:</h4>
   <br>
   <input type="text" name="title[name]" id="new_title">
   <br><br>
   <h4>Associate to a New Landmark:</h4>
   <input type="text" name="landmark[name]" id="new_landmark">
   <br><br>
   <input type="submit" value="Edit Figure">
</form>